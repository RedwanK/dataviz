{% extends 'base.html.twig' %}

{% block title %}Device #{{ device.id }}{% endblock %}

{% block body %}
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">Device #{{ device.id }}{% if device.code %} ({{ device.code }}){% endif %}</h1>
    <a href="{{ path('device_index') }}" class="btn btn-sm btn-secondary">Back</a>
  </div>

  <div class="mb-3">
    <div><strong>Gateway:</strong> {{ device.gateway ? device.gateway.name : 'â€”' }}</div>
  </div>

  <h2 class="h5 mt-4">Tags ({{ device.tags|length }})</h2>
  <table class="table table-sm table-hover align-middle mt-2">
    <thead>
      <tr>
        <th>Code</th>
        <th>Data type</th>
      </tr>
    </thead>
    <tbody>
      {% for tag in device.tags %}
        <tr>
          <td>{{ tag.code }}</td>
          <td><code>{{ tag.dataType }}</code></td>
        </tr>
      {% else %}
        <tr><td colspan="2" class="text-muted">No tags</td></tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

